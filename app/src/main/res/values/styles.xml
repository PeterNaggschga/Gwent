<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MonsterTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/color_text_monster</item>
        <item name="colorAccent">@color/color_accent_monster</item>
        <item name="card_count_text_color">@color/color_text_monster</item>
        <item name="android:alertDialogIcon">@drawable/icon_round_monster</item>
        <item name="point_ball_mipmap">@drawable/ball_red</item>
        <item name="card_view_mipmap">@drawable/card_monster_landscape_free</item>
        <item name="card_background_color">@color/color_background_monster</item>
        <item name="card_background_gradient">@color/color_gradient_monster</item>
        <item name="card_view_button_background">@color/color_card_view_button_background_monster
        </item>
    </style>

