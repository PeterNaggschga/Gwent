<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/popUp_coin_window_width"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_add_card"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/border_margin"
            android:layout_weight="1"
            android:contentDescription="@string/content_description_coinpopup_vin"
            android:src="@drawable/vin" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/border_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/popUp_coin_vin"
            android:textColor="@color/color_coin_text"
            android:textSize="@dimen/popUp_coin_title_textSize" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>